        <criteriaItems>
            <field>Lead.RecordType</field>
            <operation>equals</operation>
            <value>Ventas ESACHS</value>
        </criteriaItems>
        <criteriaItems>
            <field>Lead.Status</field>
            <operation>equals</operation>
            <value>ESACHS_ValidacionDeInformacion</value>
        </criteriaItems>
        <criteriaItems>
            <field>Lead.ESACHS_TipoDeServicio__c</field>
            <operation>equals</operation>
